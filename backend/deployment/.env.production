# BSEB Connect Backend - Production Environment Configuration

# Application
NODE_ENV=production
PORT=3000
APP_NAME="BSEB Connect Backend"

# Database (PostgreSQL)
DATABASE_URL="postgresql://bseb_user:CHANGE_THIS_PASSWORD@localhost:5432/bseb_connect?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=bseb_user
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_NAME=bseb_connect

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT Authentication
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING
JWT_REFRESH_EXPIRATION=30d

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
SMS_ENABLED=true

# File Storage (MinIO - S3 compatible)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=bseb-connect
MINIO_REGION=us-east-1

# Email Service (optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password
MAIL_FROM=noreply@bsebconnect.in

# Security & Rate Limiting
BCRYPT_SALT_ROUNDS=10
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10
OTP_RATE_LIMIT_TTL=3600
OTP_RATE_LIMIT_MAX=5

# CORS
CORS_ORIGIN=https://bsebconnect.in,https://www.bsebconnect.in,http://localhost:3000
CORS_CREDENTIALS=true

# Session
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_SESSION_SECRET
SESSION_MAX_AGE=2592000000  # 30 days in milliseconds

# API Keys (if needed)
API_KEY=CHANGE_THIS_TO_A_SECURE_API_KEY
ADMIN_API_KEY=CHANGE_THIS_TO_A_SECURE_ADMIN_API_KEY

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=/var/www/bseb-backend/logs

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_SWAGGER_DOCS=false
ENABLE_GRAPHQL_PLAYGROUND=false
ENABLE_DEBUG_MODE=false
ENABLE_REQUEST_LOGGING=true
ENABLE_AUDIT_LOGGING=true

# External Services
BSEB_API_URL=https://registrationapi.bsebmarks.in/api/MaterialApi
BSEB_API_KEY=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Performance
MAX_JSON_SIZE=10mb
MAX_FILE_SIZE=10mb
REQUEST_TIMEOUT=30000  # 30 seconds

# Frontend URLs (for email links, redirects, etc.)
FRONTEND_URL=https://bsebconnect.in
ADMIN_FRONTEND_URL=https://admin.bsebconnect.in