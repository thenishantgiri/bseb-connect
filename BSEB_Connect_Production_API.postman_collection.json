              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            }
          }
        },
        {
          "name": "Check API Root",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}{{api_path}}",
              "host": ["{{base_url}}{{api_path}}"]
            }
          }
        },
        {
          "name": "Check with Domain",
          "request": {
