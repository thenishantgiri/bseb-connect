{
  "info": {
    "_postman_id": "production-bseb-connect-2024",
    "name": "BSEB Connect Production API",
    "description": "Production API collection for BSEB Connect Backend deployed on AWS",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set timestamp for requests",
          "pm.variables.set('timestamp', new Date().toISOString());",
          "",
          "// Generate random email for testing",
          "pm.variables.set('random_email', 'test' + Math.floor(Math.random() * 10000) + '@example.com');",
          "",
          "// Generate random phone",
          "pm.variables.set('random_phone', '98' + Math.floor(Math.random() * 100000000));"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Save tokens automatically",
          "if (pm.response.json().access_token) {",
          "    pm.environment.set('access_token', pm.response.json().access_token);",
          "}",
          "",
          "if (pm.response.json().refresh_token) {",
          "    pm.environment.set('refresh_token', pm.response.json().refresh_token);",
          "}",
          "",
          "// Log response time",
          "console.log('Response Time: ' + pm.response.responseTime + 'ms');"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://65.2.113.83",
      "type": "string"
    },
    {
      "key": "api_path",
      "value": "/api",
      "type": "string"
    },
    {
      "key": "domain_url",
      "value": "http://bseb-backend.mvpl.info",
      "type": "string"
    }
  ],
